                            <label>3 серця</label>
                        </div>
                    </div>
                    <div class="price price-2 price-one" data-price="299">
                        <span>399 грн</span> <i class="fa fa-angle-right" aria-hidden="true"></i> 299 грн
                    </div>
                    <div class="price price-2 price-two" data-price="549">
                        <span>798 грн</span> <i class="fa fa-angle-right" aria-hidden="true"></i> 549 грн
                    </div>
                    <div class="price price-2 price-three active" data-price="699">
                        <span>1197 грн</span> <i class="fa fa-angle-right" aria-hidden="true"></i> 699 грн
                    </div>
                    <div class="client-info">
                        <input name="name" required type="text" placeholder="Ім’я та прізвище*">
                        <input name="phone" required id="user-phone" type="text" placeholder="Номер телефону*">
                        <h2 class="client-info-photo-title">Завантажити фото:</h2>
                        <div class="client-info-photo-container">
                            
                            <div class="client-info-photo photo-one active">
                                <i class="fa fa-plus" aria-hidden="true"></i>
                                <input class="user-images user-image-one" required type="file" accept="image/*">
                            </div>
                            <div class="client-info-photo photo-two active">
                                <i class="fa fa-plus" aria-hidden="true"></i>
                                <img>
                                <input class="user-images user-image-two" required type="file" accept="image/*">
                            </div>
                            <div class="client-info-photo photo-three active">
                                <i class="fa fa-plus" aria-hidden="true"></i>
                                <input class="user-images user-image-three" required type="file" accept="image/*">
                            </div>
                        </div>
                    </div>

                    <input name="utm_source" type="hidden" value="{{ utm_source }}">
                    <input name="utm_medium" type="hidden" value="{{ utm_medium }}">
                    <input name="utm_term" type="hidden" value="{{ utm_term }}">
                    <input name="utm_content" type="hidden" value="{{ utm_content }}">
                    <input name="utm_campaign" type="hidden" value="{{ utm_campaign }}">

